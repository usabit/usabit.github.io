#medium-posts {
    display flex
    flex-wrap wrap
    margin 0 -10px

    a {
        margin 15px 10px
        width calc(25% - 20px)
        border alpha(black, .01)
        box-shadow 0px 2px 1px alpha(black, .2)
        background-color alpha(black, .015)
        border-radius 4px
        color alpha(black, .9)
        transition 200ms ease-out
        display flex
        flex-direction column
        
        &:hover {
            box-shadow 0px 2px 1px alpha(black, .1)
            text-decoration none
            margin-top 13px
            margin-bottom 17px
        }
        
        .img-wrap {
            size(100%, 190px)
            display block
            background-size cover
            background-position center center
        }
        
        .text-wrap {
            flex 1
            display flex
            flex-direction column
            align-items flex-start
            justify-content space-between
            padding 15px
            p:last-of-type {
                margin-bottom 0
            }
            
            .post-title {
                font-size .9rem
                line-height 1.4
            }
            
            .post-writer {
                font-size .7rem
                color #999
            }
        }
        
        +below(1024px){
            width calc(50% - 20px)
        }
        
        +below(500px){
            width 100%
            margin-left 0
            margin-bottom 0
        }
    }
}