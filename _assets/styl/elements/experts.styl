.experts-list {
    display flex
    justify-content center
    flex-wrap wrap
    
    li {
        flex 1
        margin 20px
        display flex
        flex-direction column
        align-items center
        justify-content flex-start
        border 3px solid alpha(black, .2)
        padding 20px
        
        img {
            margin 15px 0
            max-width 100px
        }

        +below('mobile'){
            width 100%
        }
    }
}