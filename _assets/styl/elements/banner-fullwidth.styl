section.banner-fullwidth {
  width 100%
  position relative
  
  .banner-controllers {
    position absolute
    color white
    bottom 25px
    left 50%
    transform translate3d(-50%, 50%, 0)
    z-index 99
    
    display flex
    
    li {
      margin 0 10px
      cursor pointer
    }
    
    ul.banner-representation {
      display flex
      margin 0 10px
    }
  }
  
  ul.banner {
    padding 0
    margin 0
    list-sytle none
    
    li {
      background-size cover
      background-position center center
      margin 0
      padding 0
      position relative
      z-index 1
      width 100%
      
      &:after {
        background-image linear-gradient(to top, alpha(black, .7), transparent)
        content ''
        position absolute
        trbl 0
        z-index -1
      }
      
      &.noshadow:after {
        content none
      }
      
      .wrapper {
        height 585px
        padding 160px 0 50px 0
        display flex
        flex-direction column
        justify-content center
      }      
      
      h1,
      p {
        line-height 1.5
        max-width 450px
        color white
        text-shadow 1px 1px alpha(black, .3)
        
        &.inverted {
          background-color azulUsabit
          padding 20px
          max-width initial
          display inline-block
          align-self flex-start
          margin-bottom 0
        }
        
        +below('mobile'){
          br {
            display none
          }          
        }
      }
    }
  }
}