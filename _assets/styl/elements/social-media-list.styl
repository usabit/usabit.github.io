.social-media-list {
  display flex
  align-items center
  
  li {
    margin 1px
    display flex
    align-items center
    
    &:last-child {
      margin-right 0
    }

    a {
      font-size 12px
      color #4c4c4c
      
      &:hover {
        color alpha(#4c4c4c, .7)
        transition 200ms
      }
    }
  }
  
}