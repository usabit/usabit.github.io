firstAzul = #599ed5
secondAzul = #63b0ed

.formulario-wrapper {
    &.azul {
        background-image linear-gradient(left, firstAzul 50%, secondAzul 50%)
    }
}

table.formulario {
    width 100%
    max-width 100%

    h1, h2, h3, h4, h5 {
        color white
    }
    
    .hint {
        color white
        font-size .7rem
        margin-left 15px
        display inline-block
        
        &.left {
            text-align left
            margin-left 0
            margin-top 10px
        }
        
        +below('small-tablet'){
            text-align left
            margin-left 0
            margin-top 10px
        }
    }
    
    .mobile-only {
        display none
        +below('small-tablet'){
            display block
        }
    }
    
    .flex {
        display flex
        align-items center
        +below('small-tablet'){
            flex-direction column
            align-items flex-start
        }
    }
    
    input {
        background alpha(white, .9)
        border 0
        padding 8px 12px
        font-size 1rem
        outline 0
        width 250px
        
        &.cep {
            width 120px
            text-align center
        }
    }
    
    .input-group {
        label {
            display flex
            flex-direction column
            margin-right 20px
            
            +below('small-tablet') {
                margin-bottom 15px
            }
        }
        span {
            color alpha(black, .8)
            font-size .8rem
        }
        input {
            width 90px
            margin-top 5px
        }
    }

    > tbody > tr {
        > td:first-child {
            background-color firstAzul
            text-align right
            padding 10px 20px 10px 0
            font-site 1.1rem
            color alpha(black, .6)
            line-height 1.3
            
            +below('small-tablet'){
                display none
            }
        }
        > td:last-child {
            background-color secondAzul
            padding 30px
            
            +below('small-tablet'){
                padding 30px 0 0 30px
            }
        }
        
        &:last-child {
            > td:last-child {
                padding-bottom 30px
            }
        }
    }
}