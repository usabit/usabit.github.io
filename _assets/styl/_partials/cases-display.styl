.cases-display-list {
  li.cases-display-item {
    background-size cover
    background-position center center
    background-repeat no-repeat
    overflow hidden
    
    .wrapper {
      text-align center
    }
    
    .text-wrapper {
      display inline-flex
      flex-direction column
      position relative
      margin 0 auto
      color white
      
      align-items center
      padding 90px 20px 40px
      
      img.case-icon {
        max-width 100%
      }

      img.case-img-helper {
        position absolute
        bottom 0
        &.left {
          right 100%
        }
        &.right {
          left 100%
        }
      }
      
      .case-title {
        margin 20px 0 5px
      }
      .case-slogan {
        margin 10px 0
      }
      .case-disclaimer {
        margin-bottom 50px
        font-size 1.125rem
        color alpha(azulUsabit, .8)
        text-shadow 1px 1px alpha(black, .8)
      }
      .case-links {
        display flex
        min-width 300px
        margin 30px 0
        justify-content space-around
        
        li a {
          font-size 1rem
          display flex
          align-items center
          color white
          font-weight 300
          
          &:hover {
            color azulUsabit
            transition 200ms
          }

          i.fa {
            margin-right 7px
          }
        }
      }
    }
  }
}