ul.crew-list {
  display flex
  
  align-items flex-start
  justify-content space-around
  
  +below('small-tablet'){
    flex-direction column
    align-items center
  }
  
  li.crew-item {
    max-width 300px
    display flex
    flex-direction column
    align-items center
    margin 0 10px

    +below('small-tablet'){
      margin 10px 0
    }
    
    h3.crew-name {
      border-bottom 1px solid azulUsabit
      padding 0 13px 10px
      margin-bottom 10px
    }
    
    p.crew-position {
      font-size 1.15rem
      font-weight 300
      margin 0
      
      +below('small-tablet'){
        font-size 1rem
      }
    }
    
    p.crew-description {
      font-size 1.3rem
      line-height 1.3
      font-weight 300
      text-align center

      +below('small-tablet'){
        font-size 1rem
      }
    }
  }
}