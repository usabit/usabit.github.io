section.portfolio {
  h2 {
    center(650px)
    color alpha(black, .6)
  }
  
  .portfolio-list {
    display flex
    align-items stretch
    justify-content center
    flex-wrap wrap

    list-style none
    padding 0
    margin 0

    .portfolio-item {
      margin 20px
      text-align center
      display flex
      align-items center
      flex-direction column
      font-weight 300
      
      +below('mobile'){
        justify-content center
      }

      .img-wrap {
        size(200px)
        display flex
        align-items center
        justify-content center
        
        +below('tablet'){
          size(170px)
        }
        +below('small-tablet'){
          size(130px)
        }
        +below('mobile'){
          size(100px)
        }
        
        img {
          max-width 100%
          max-height 100%
          flex-shrink 0
        }
      }

      .text-wrap {
        display flex
        flex 1
        align-items center
        margin-top 10px
        font-size 1.3rem
        line-height 1.3
      }
      
      a {
        color alpha(black, .6)
        text-decoration none
        font-weight inherit
        align-self stretch

        display flex
        flex-direction column
        align-items center
        
        +below('mobile'){
          display none
        }

        .img-wrap {
          size(100px)
        }
        
        .text-wrap {
          display none
          margin-top 0
          font-size 1.1rem

          &.show-desktop {
            +above('small-tablet'){
              display flex
            }
          }
          &.show-mobile {
            +below('mobile'){
              display flex
              padding 7px
            }
          }
        }

        +below('mobile'){
          border-bottom 1px solid transparent
          margin 0 3px 7px 3px
        }

        &:hover,
        &.active {
          color #1a9ded
          +below('mobile'){
            border-bottom 1px solid @color
          }
        }
      }
    }
  }

  ul.portfolio-display {
    display flex
    flex-direction  column
    background-color alpha(black, .05)
    padding 40px 0
    margin 40px 0
    
    +below('mobile'){
      padding 0
    }

    li.portfolio-display-item {

      display none
      +below('mobile'){
        display flex
        border-bottom 2px solid white
        width 100%
        position relative
      }
      &.active {
        display flex
      }
        
      > .img-wrap {
        width 40%
        margin-right 40px
        display flex
        align-items center
        justify-content center
        flex-direction column
        
        p {
          text-align center
          +below('mobile'){
            display none
          }
        }
        
        +below('mobile'){
          position relative
          overflow hidden
          margin-right 0
        }
        
        img {
          max-width 100%
          margin 5px
        }
      }
      
      > .text-wrap {
        flex 1
        padding 40px 15px
        h1 {
          font-weight 700
          +below('mobile') {
            font-size 1.3rem
          }
        }
        p {
          font-size 1.125rem
          line-height 1.5
        }
        
        ul {
          li {
            margin 15px 0
          }
          
          .blue {
            color #43aeef
          }
          .purple {
            color #b488c5
          }
          .red {
            color #d4675f
          }
        }
        
        ul.clientes-lista-icon {
          li {
            display flex
            align-items center
            
            > .img-wrap {
              margin-right 15px
            }
            > .text-wrap {
              p {
                margin 0
                
                &.client {
                  font-size 1rem
                }
                
                &.description {
                  font-size 1rem
                  color alpha(black, .4)
                }
              }
            }
          }
        }
      }
    }
  }
}