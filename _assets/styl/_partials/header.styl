.site-header {
    padding 30px 0
    background $white
    .wrapper {
        display flex
        justify-content space-between
        align-items center
    }
    &__logo {
        display inline-flex
        align-items flex-start
        img {
            width 45px
            margin-right 14px
        }
        svg {
            width 84px
            path {
                fill $gray10
            }
        }
    }
    &__navigation, &__menu-list {
        display flex
        align-items center
    }
    &__menu-item {
        margin-right 46px
    }
    &__menu-link {
        font-family $roboto
        color $black
        font-size 17px
        font-weight 400
        transition all 250ms
        &:hover, &:active, &.active {
            color $blue5
            font-weight 700
            text-decoration none
            transition all 250ms
        }
    }
    &__language {
        display inline-block
        width 30px
        height 30px
        line-height 30px
        border 1px solid $gray12
        border-radius 50%
        font-family Roboto
        color $black
        font-size 11px
        font-weight 400
        text-align center
        text-transform uppercase
        &:hover {
            text-decoration none
        }
    }
    &__messenger, &__open-menu {
        margin-left 34px
    }
}