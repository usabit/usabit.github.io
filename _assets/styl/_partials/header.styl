a#menu-toggle {
  display flex
  align-items center
}

header.site-header {
  // background-color alpha(black, .7)
  // border-bottom 2px solid alpha(white, .2)
  background-color white
  box-shadow 0 0 2px alpha(black, .3)
  position fixed
  top 0
  left 0
  right 0
  padding 20px 0
  z-index 10
  
  .wrapper {
    display flex
    justify-content space-around
    align-items center
  }

  .site-title {
    display inline-flex
    align-items center
    img {
      width 30px
      margin-right 10px
    }
    svg#usabit-logotipo {
      width 80px
      margin-bottom 5px
      path {
        fill #bcbcbc
      }
    }
  }
}

header.site-header .site-nav .responsive-menu {
  padding-top 85px
  position fixed
  trbl 0
  background-color alpha(azulUsabit, .9)
  display none
  flex-direction column
  justify-content space-around
  z-index -1
  
  &.active {
    display flex
  }

  a {
    color white
    display flex
    align-items center
    justify-content center
    font-size 5vh
    padding 2vh
    
    &:hover {
      background-color white
      color azulUsabit
      transition 100ms
    }
  }
}

header.site-header.homepage .site-nav .responsive-menu {
  padding-top 160px
}

.lang-change {
  margin-left 30px
  font-size 14px
  text-transform uppercase
  text-decoration none
  color white
  
  &:hover,
  &:focus,
  &:active {
    color white
    text-decoration none
  }
  
  img {
    width 20px
    margin 0 5px 0 0
  }
  +below('small-tablet'){
    font-size 16px !important
    margin-left 0
  }
}