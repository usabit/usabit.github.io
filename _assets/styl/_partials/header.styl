.site-header {
    position fixed
    top 0
    left 0
    right 0
    padding 30px 0
    background rgba($white, 0.9)
    z-index 100

    +below('mobile') {
        padding 15px 0
    }

    .wrapper {
        display flex
        justify-content space-between
        align-items center
    }
    &__logo {
        display inline-flex
        align-items flex-start
        img {
            width 45px
            margin-right 14px

            +below('small-tablet') {
                width 35px
            }
            +below('mobile') {
                width 25px
            }
        }
        svg {
            width 84px
            margin-top 4px
            path {
                fill $gray10
            }
            +below('small-tablet') {
                width 65px
            }
            +below('mobile') {
                width 45px
            }
        }
    }
    &__navigation, &__menu-list {
        display flex
        align-items center
    }
    &__menu {
        +below('small-tablet') {
            display none
        }
    }
    &__menu-item {
        margin-right 46px
    }
    &__menu-link {
        font-family $roboto
        color $black
        font-size 17px
        font-weight 400
        transition all 250ms
        &:hover, &:active, &.active {
            color $blue5
            font-weight 700
            text-decoration none
            transition all 250ms
        }
    }
    &__language {
        display inline-block
        width 30px
        height 30px
        line-height 30px
        border 1px solid $gray12
        border-radius 50%
        font-family Roboto
        color $black
        font-size 11px
        font-weight 400
        text-align center
        text-transform uppercase

        +below('mobile') {
            width 25px
            height 25px
            line-height 25px
        }
        &:hover {
            text-decoration none
        }
    }
    &__messenger, &__open-menu {
        margin-left 34px
    }
    &__messenger {
        position relative
        width 32px
        height 32px

        +below('mobile') {
            width 25px
            height 25px
            margin 0 15px
        }

        img {
            width 100%
            height auto
            cursor pointer
        }

        .fb-page {
            position absolute
            top 38px
            right 0
            width 0
            height 0
            overflow hidden
            opacity 0
            transition opacity 250ms
        }
        &.active {
            .fb-page {
                width auto
                height auto
                opacity 1
                transition opacity 500ms
            }
        }
    }
    &__open-menu {
        +below('mobile') {
            margin 0
            zoom 0.7
        }
    }
}
.sidenav {
    position fixed
    top 30px
    left -30px
    bottom 0
    display flex
    width 100%
    height 100%
    z-index 99
    transition all 250ms
    overflow hidden
    transform scale(0)
    transform-origin top right

    &.active {
        top 0
        left 0
        transform scale(1)
        transition all 250ms
    }

    &__close-menu {
        position absolute
        top 30px
        right 30px
        font-size 0

        &:before {
            content ""
            display inline-block
            sprite($icon-close)
            opacity 0.7
        }

        +below('small-tablet') {
            top 15px
            right 15px
        }
        +below('small-tablet') {
            zoom 0.5
        }
    }
    &__left {
        display flex
        align-items center
        justify-content center
        flex 1
        padding 15px 15px 55px
        background $white
        text-align center

        +below('small-tablet') {
            display none
        }
    }
    &__logo {
        display flex
        align-items center
        position absolute
        img {
            width 45px
            margin-right 14px
        }
        svg {
            width 84px
            path {
                fill $gray10
            }
        }
    }
    &__social {
        align-self flex-end
    }
    &__social-list {
        display flex
        align-items center
    }
    &__social-item {
        opacity 1
        transition opacity 250ms
        .social-media-link {
            font-size 12px
        }
        &:nth-of-type(1) {
            .fa-circle {
                color $facebook
            }
        }
        &:nth-of-type(2) {
            .fa-circle {
                color $linkedin
            }
        }
        &:nth-of-type(3) {
            .fa-circle {
                color $behance
            }
        }
        &:nth-of-type(4) {
            .fa-circle {
                color $instagram
            }
        }
        &:nth-of-type(5) {
            .fa-circle {
                color $pinterest
            }
        }
        &:nth-of-type(6) {
            .fa-circle {
                color $medium
            }
        }
        &:hover {
            opacity 0.6
            transition opacity 250ms
        }
    }
    &__right {
        flex 3
        padding 55px
        background $blue9

        +below('small-tablet') {
            overflow auto
            padding 25px
        }
        +below('mobile') {
            padding 15px
        }

        h1, h2 {
            font-family Lato
            color $white
            font-size 30px
            font-weight 300
        }
        h1 {
            +below('small-tablet') {
                font-size 25px
                line-height 120%
            }
            +below('mobile') {
                font-weight 100
                font-size 18px
                line-height 150%
            }
        }
    }
    &__nav {
        display inline-block
        margin 70px 55px 0 0

        +below('mobile') {
            margin 25px 0 0
        }

        h2 {
            position relative
            padding-left 45px
            font-size 14px
            font-weight 700
            text-transform uppercase

            +below('mobile') {
                padding-left 35px
                font-size 12px
            }

            &:before {
                content ""
                position absolute
                top -5px
                left 0
                display inline-block
                
                +below('mobile') {
                    zoom 0.8
                }
            }
        }
        &:nth-of-type(1) {
            h2 {
                &:before {
                    sprite($icon-heart)
                }
            }
        }
        &:nth-of-type(2) {
            h2 {
                &:before {
                    top -15px
                    sprite($icon-keyboard)
                }
            }
        }
        &:nth-of-type(3) {
            h2 {
                &:before {
                    sprite($icon-paperplane)
                }
            }
        }
    }
    &__list {
        margin-top 20px
        padding-left 45px

        +below('mobile') {
            margin-top 10px
            padding-left 35px
        }
    }
    &__link {
        font-family Lato
        color $white
        line-height 53px
        font-size 22px
        font-weight 300
        opacity 1
        transition opacity 250ms

        +below('mobile') {
            line-height 200%
            font-size 16px
        }

        &:hover {
            color $white
            opacity 0.6
            transition opacity 250ms
            text-decoration none
        }
    }
}
