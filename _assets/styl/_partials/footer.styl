.site-footer {
    .wrapper {
        display flex
        padding-top 55px
        padding-bottom 55px
        justify-content space-between
        align-items center
        border-top 1px solid rgba($gray7, 0.3)
    }
    &__logo {
        display inline-flex
        align-items flex-start
        img {
            width 29px
            margin 3px 24px 0 0
        }
        &:hover {
            text-decoration none
        }
    }
    &__logo-text {
        margin 0
        font-family $lato
        color $gray9
        line-height 100%
        font-size 16px
        font-weight 400
        small {
            display block
            margin-top 3px
            font-size 12px
        }
    }
    &__menu-list, &__social-list {
        display flex
        align-items center
    }
    &__menu-item {
        &:before {
            content "â€¢"
            margin 0 15px
            color $blue9
            font-size 16px
            font-weight 400
        }
        &:first-of-type {
            &:before {
                display none
            }
        }
    }
    &__menu-link {
        font-family $lato
        color $gray3
        font-size 16px
        font-weight 400
    }
    &__social-item {
        margin-left 10px
        &:first-of-type {
            margin-left 0
        }
        .social-media-link {
            color rgba($gray12, 0.7)
            font-size 15px
        }
    }
}