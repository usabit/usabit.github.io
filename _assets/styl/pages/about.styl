.top {
    padding 160px 0
    text-align center
    &__title {
        color $black
        font-size 60px

        +below('small-tablet') {
          font-size 40px

          br {
            display none
          }
        }
    }
    &__subtitle {
        margin-top 60px
        color $blue8
        font-weight 400
        font-size 30px

        +below('small-tablet') {
          font-size 28px
          line-height 120%

          br {
            display none
          }
        }
    }
}

.skills, .portfolio, .strategy, .about .customers, .contact {
    margin-top 200px

    +below('small-tablet') {
        margin-top 100px
    }
    +below('mobile') {
        margin-top 50px
    }
}

.skills {
    display flex
    justify-content space-around
    &__title {
        color $gray2
        font-weight 700
        font-size 23px
    }
    &__list {
        margin-top 10px
    }
    &__item {
        color $gray2
        font-weight 300
        font-size 18px
        line-height 36px
    }

    +below('small-tablet') {
      flex-direction column

      &__box {
        margin-bottom 30px
      }
    }
}

.portfolio {
    display flex
    justify-content space-between

    +below('tablet') {
        flex-direction column
    }

    &__content {
        width 75%

        +below('tablet') {
            width 100%
            margin-bottom 20px
        }

        & + img {
            +below('tablet') {
                display none
            }
        }
    }
    &__box {
        &:nth-of-type(1) {
            padding-right 100px

            +below('tablet') {
                padding-right 0
            }
        }
        &:nth-of-type(2) {
            margin-top 170px
            padding-left 100px
            text-align right

            +below('tablet') {
                margin-top 70px
                padding-left 0
            }
        }
    }
    &__title {
        color $gray1
        font-size 32px

        +below('tablet') {
            font-size 28px
        }
    }
    &__text {
        margin 30px 0
        color $gray4
        font-size 18px
        line-height 24px

        +below('tablet') {
            font-size 16px
        }
    }
    &__link {
        display inline-block
        height 44px
        padding 5px 15px 0 10px
        color $gray2
        font-size 18px
        text-align center
        background $yellow
        border-radius 3px
        opacity 1
        transition opacity 250ms
        &:hover {
            text-decoration none
            opacity 0.6
            transition opacity 250ms
        }
        .fa-behance {
            font-size 14px
        }
    }
}

.strategy {
    background $blue13
    .wrapper {
        padding-top 120px
        padding-bottom 120px
        background url("/assets/img/img-code-js.png") no-repeat right center

        +below('small-tablet') {
            padding-top 60px
            padding-bottom 60px
        }
        +below('mobile') {
            padding-top 30px
            padding-bottom 30px
        }
    }
    &__content {
        display flex
        justify-content space-between
        margin-top 95px

        +below('small-tablet') {
            flex-direction column
            margin-top 60px
        }
        +below('mobile') {
            margin-top 30px
        }
    }
    &__box {
        width 48%

        +below('small-tablet') {
            width 100%
            margin-top 60px
        }
        +below('mobile') {
            margin-top 30px
        }
        &:first-of-type {
            +below('small-tablet') {
                margin-top 0
            }   
        }
    }
    &__title {
        color $white
        font-size 40px

        +below('mobile') {
            font-size 28px
        }
    }
    &__text, &__box-text {
        margin 25px 0 0
        color $white
        font-size 18px
        line-height 24px

        +below('mobile') {
            font-size 16px
        }
    }
    &__box-title {
        color $blue10
        font-size 24px

        +below('mobile') {
            font-size 18px
        }
    }
}

.lab {
    padding-top 155px
    background url("/assets/img/bg-lab.png") no-repeat center top

    +below('mobile') {
        padding-bottom 80px
    }

    &__title {
        color $gray5
        font-size 40px

        +below('small-tablet') {
            font-size 32px
        }

        +below('mobile') {
            font-size 28px
        }
    }
    &__text {
        margin 30px 0 0
        color $gray4
        font-size 18px
        line-height: 24px

        +below('mobile') {
            font-size 16px
        }
    }
    &__content {
        display flex
        justify-content space-between
        margin-top 75px

        +below('mobile') {
            margin-top 50px
        }
    }
    &__box {
        width 22%
    }
    &__box-title {
        position relative
        padding-top 45px
        font-size 14px
        text-transform uppercase

        &:before {
            content ""
            position absolute
            top 0
            left 0
        }

        &--red {
            &:before {
                sprite($icon-mkt)
            }
            color $red3
        }
        &--green {
            &:before {
                sprite($icon-seo)
            }
            color $green
        }
        &--yellow {
            &:before {
                sprite($icon-statistics)
            }
            color $yellow2
        }
        &--blue {
            &:before {
                sprite($icon-testeab)
            }
            color $blue9
        }
    }
    &__box-text {
        margin 35px 0 0
        color $gray4
        font-size 14px
        line-height 32px
    }

    +below('small-tablet') {
      &__content {
        flex-direction column
      }
      &__box {
          width 100%
          margin-bottom 50px
      }
      &__box-text {
        margin 10px 0 0
        line-height 140%
      }
    }
}

.about {
    .contact {
        padding-bottom 200px
        text-align center

        +below('small-tablet') {
            padding-bottom 100px
        }

        &__title {
            color $gray14
            font-size 60px

            +below('small-tablet') {
                font-size 30px
                line-height 120%
            }
            +below('mobile') {
                font-size 24px
            }
        }
        &__link {
            display inline-block
            height 44px
            line-height 44px
            margin-top 90px
            padding 0 15px 0 10px
            color $black
            font-weight 700
            font-size 15px
            text-align center
            background $yellow
            border-radius 3px
            opacity 1
            transition opacity 250ms
            &:hover {
                text-decoration none
                opacity 0.6
                transition opacity 250ms
            }

            +below('small-tablet') {
              margin-top 40px
            }
        }
    }
}
