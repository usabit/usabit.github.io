.site-footer {
    margin 0 55px

    +below('small-tablet') {
        margin 0 25px
        text-align center
    }
    +below('mobile') {
        margin 0 15px
    }
    .wrapper {
        position relative
        display flex
        justify-content space-between
        align-items center
        padding 55px 0
        border-top 1px solid rgba($gray7, 0.3)

        +below('small-tablet') { flex-direction: column; }
    }
    &__logo {
        display inline-flex
        align-items center

        #usabit-logotipo {
            height: 18px;
            margin-right: 15px;
        }

        &:hover {
            text-decoration none
        }

        &-text {
            margin 0
            font-family $lato
            color $gray9
            line-height 100%
            font-size 14px
            font-weight 400

            +below('mobile') {
                font-size 12px
            }

            small {
                display block
                margin-top 3px
                font-size 12px

                +below('mobile') {
                    margin-top 8px
                    font-size 9px
                }
            }
        }

        +below('small-tablet') {
            flex-direction: column;
            margin-bottom: 30px;

            #usabit-logotipo {
                margin-right: 0;
                margin-bottom: 15px;
            }
        }
    }

    &__menu-list, &__social-list {
        display flex
        align-items center
    }
    &__menu-list {
        +below('small-tablet') {
            display none
        }
    }
    &__menu-item {
        +below('small-tablet') {
            display block
        }
        &:before {
            content "â€¢"
            margin 0 15px
            color $blue9
            font-size 16px
            font-weight 400

            +below('small-tablet') {
                display none
            }
        }
        &:first-of-type {
            &:before {
                display none
            }
        }
    }
    &__menu-link {
        font-family $lato
        color $gray3
        font-weight 400
        font-size 16px

        +below('small-tablet') {
            font-size 12px
        }
    }
    &__social-item {
        margin-left 10px
        &:first-of-type {
            margin-left 0
        }
        .social-media-link {
            color rgba($gray12, 0.7)
            font-size 15px
            opacity 1
            transition opacity 250ms

            +below('mobile') {
                zoom 0.7
            }
            &:hover {
                opacity 0.6
                transition opacity 250ms
            }
        }
    }
}