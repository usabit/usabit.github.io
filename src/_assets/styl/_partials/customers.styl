.customers {
  text-align center

  margin-top: 40px;
  margin-bottom: 40px;

  +below('small-tablet') {
    margin-top: 25px;
    margin-bottom: 25px;
  }

  h1 {
    +below('tablet') {
      font-size 28px
    }
    +below('mobile') {
      line-height 120%
      font-size 24px
    }
  }

  &__list {
    display flex
    justify-content center
    align-items center

    li {
      margin 40px 2%;
    }

    +below('mobile') {
      flex-direction column
      margin-top 30px

      & + .customers__list {
        margin-top 0
      }
    }

    +below(1300px) {
      li:nth-child(n+5) { display: none; }
    }

    +below(1000px) {
      li { margin: 30px 3%; }
    }
  }
  &__item {
    +below('desktop') {
      zoom 0.8
    }
    +below('tablet') {
      zoom 0.7
    }
    +below('small-tablet') {
      zoom 0.6
    }
    +below('mobile') {
      margin 25px 0
      zoom 0.5
    }
  }
}