.customers {
  margin-top 140px
  text-align center

  +below('small-tablet') {
    h1 {
      font-size 28px
      line-height 120%
    }
  }
  +below('mobile') {
    display none
  }
  &__list {
    display flex
    justify-content space-around
    align-items center
    margin-top 60px

    +below('small-tablet') {
      flex-direction column
      margin-top 30px

      li {
        margin 20px 0
      }

      & + .customers__list {
        margin-top 0
      }
    }
  }
}