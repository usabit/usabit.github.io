ul.infra-estruturas-list {
    li {
        col(1/4, gutter: 1.9, cycle:4)
        padding 30px 0 10px 0
        display flex
        flex-direction column
        align-items center
        justify-content flex-start
        position relative
        
        img {
            max-width 100%
            margin-bottom 20px
        }
        
        span {
            text-align center
            line-height 1.3
        }
        
        &:after {
            content ''
            position absolute
            top 0
            right 0
            transform translateX(50%)
            size(112px, 21px)
            background-image url(/assets/img/infra-seta-estrutura.png)
            background-position center center
            background-repeat no-repeat
        }
        
        &:last-child:after {
            content none
        }
        
        +below('small-tablet'){
            col(1/2, uncycle: 4, cycle: 2)

            &:after {
                content none
            }
        }
    }
}