.divider-marker {
    background-color azulUsabit
    overflow hidden
    
    color black
    
    a {
        color black
        text-align center
        display block
        &:hover {
            text-decoration none
            color alpha(black, .8)
        }
    }
    
    .uppercase {
        text-transform uppercase
    }
    
    &.golden-bg {
        background-color #bdb573
    }
    
    .white {
        color white
    }
    
    p {
        line-height 1.4
        font-size 1rem
    }
    
    .custom-paragrath {
        max-width 600px
        margin 20px auto 60px auto
    }
}