.product-brief {
    overflow-x hidden

    .wrapper {
        display flex
        justify-content space-between
        
        +below('small-tablet'){
            flex-direction column
            align-items center
        }
        
        .text-wrapper {
            max-width 600px

            h3 {
                color azulUsabit
                line-height 1.4
            }
            
            p {
                line-height 1.3
            }
            
            .dna {
                margin-left -2px
            }

            +below('small-tablet'){
                text-align center

                .dna {
                    margin 10px auto 60px
                }
            }
            
        }
        
        .img-wrapper {
            img {
                margin-left 10px
                +below('small-tablet'){
                    max-width 100%
                    margin-left 0
                }
            }
        }
    }
}