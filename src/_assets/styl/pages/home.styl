.main-banner {
    position relative
    // background linear-gradient(left, #7fc7ff, #4c80a9)
    background-image url('/assets/img/main-banner.jpg');
    background-position right top
    background-size cover

    &:after {
        content: '';
        padding-top: 30%;
        display: block;
        margin: 0;
        min-height: 300px;
        +below('tablet'){
            padding-top: 25%;
        }
        +below('mobile'){
            background-color alpha(black, .4)
        }
    }

    .banner-content {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        display: flex;

        +below('mobile'){
            br { display: none; }
        }
    }

    .wrapper {
        display flex
        align-items: center;
    }
    &__title, &__sub-title {
        position relative
        z-index 1
        color $white
        font-size 30px
        font-weight 300
        line-height: 1.3;
        text-shadow: 1px 1px 1px alpha(black, .3)

        +below('desktop') {
            font-size 26px
        }
        +below('tablet') {
            font-size 22px
            text-shadow: 1px 1px 1px alpha(black, .7)
        }
    }
    &__sub-title {
        margin-top 25px
        font-weight 100
        font-size 28px

        +below('mobile') {
            font-size 20px
        }
    }
    &__btn {
        position relative
        z-index 1
        margin-top 35px
        font-weight: 300;

        +below('mobile') {
            height 36px
            line-height 36px
            margin-top 25px
            font-size: 14px;
        }
    }
    &__img {
        position relative
        z-index 1

        +below('desktop') {
            width 70%
            height 100%
        }
        +below('tablet') {
            width 60%
        }
        +below('small-tablet') {
            width 50%
        }
        +below('mobile') {
            display none
        }
    }
    &__waves {
        position absolute
        bottom 0
    }
}
.services, .blog-news {
    margin-top 70px

    +below('small-tablet') {
        margin-top 70px
    }
    +below('mobile') {
        margin-top 35px
    }
    h1 {
        color $gray6
        font-size 40px
        text-align center

        +below('small-tablet') {
            font-size 28px
            line-height 120%

            br {
                display none
            }
        }
        +below('mobile') {
            font-size 24px

            br {
                display none
            }
        }
    }
}
.services {
    text-align center
    overflow: hidden;

    &__navigation {
        margin-top 100px

        +below('mobile') {
            margin-top 50px
        }
    }
    &__list {
        display flex
        justify-content space-between
        width 740px
        margin 0 auto

        +below('small-tablet') {
            display block
            width 100%
        }
    }
    &__item {
        +below('small-tablet') {
            display inline-block
            width 47%
            margin-bottom 40px
        }
        &:last-of-type {
            margin-bottom 0
        }
    }
    &__link {
        font-family $roboto
        color $black
        font-size 17px
        font-weight 400
        +below('mobile') {
            font-size 14px
        }

        &:hover, &:focus {
            color $blue9
            text-decoration none

            .services__icon {
                background $blue9
            }
        }
        &:before {
            content ""
            display block
            margin 0 auto 35px

            +below('mobile') {
                zoom 0.6
            }
        }
        &:hover {
            color $blue2
            text-decoration none
        }
        &--monitor {
            &:before {
                sprite($icon-monitor)

                .services__link:hover &, .services__link:focus & {
                    sprite($icon-monitor-hover)
                }
            }
        }
        &--smartphone {
            &:before {
                sprite($icon-smartphone)

                .services__link:hover &, .services__link:focus & {
                    sprite($icon-smartphone-hover)
                }
            }
        }
        &--product {
            &:before {
                sprite($icon-product)

                .services__link:hover &, .services__link:focus & {
                    sprite($icon-product-hover)
                }
            }
        }
        &--notebook {
            &:before {
                sprite($icon-notebook)

                .services__link:hover &, .services__link:focus & {
                    sprite($icon-notebook-hover)
                }
            }
        }
    }
}

.service {
    overflow: hidden;
    .wrapper {
        display flex
        justify-content space-between
        align-items center
        padding 70px 0
        // border: red;
    }

    &:nth-child(odd) {
        background: alpha(black, .05);
    }

    .service__texts {
        max-width: 580px;

        h1 {
            color $black
            font-size 36px
            font-weight 300
            line-height: 1.5;
        }
        & > p {
            margin-top 50px
            font-family $lato
            color $gray4
            font-size 20px
            font-weight 300
        }
        & + .service__btn {
            margin-left 20px
        }
    }

    .service__action,
    .service__action + .service__related { margin-top: 50px; }

    .service__action {
        display flex
        align-items center

        & + .service__related {
            margin-top 50px
        }
    }

    .service__btn {
        & + .service__btn {
            margin-left 10px
        }
        & + .service__related {
            margin-left 20px
        }
    }

    .service__action-text {
        font-family $roboto
        color $gray4
        font-size 16px
        font-weight 500

        & + .service__btn {
            margin-left 20px
        }
    }

    .service__related {
        font-family $roboto
        color  #548ab4
        font-size 15px
        font-weight 300

        strong {
            font-weight 700
        }
    }

    .service__img {
        text-align: center;
        
        img { max-width: 90%; }
    }

    +below('tablet'){
        .wrapper {
            padding: 50px 0;
            // border: orange;
        }

        .service__texts {
            h1 { font-size: 30px; }
        }
    }

    +below('small-tablet'){
        // .wrapper { border: pink; }
        .service__action {
            flex-direction: column;
            align-items: flex-start;
            margin-top: 0;
            br { display: none; }
            .service__btn { margin-left: 0; margin-top: 20px; }
        }

        .service__img { margin-left: -25%; }
        .service__texts + .service__img { margin-left: 0; margin-right: -30%; }

        .service__texts {
            h1 { font-size: 20px; }
            p { font-size: 14px; margin-top: 20px; margin-bottom: 0; }
        }
    }
}

.projects {
    display none
    padding 30px
    // background $lilac
    background #9269b7
    text-align center

    &__title {
        color $white
        font-size 26px
    }
    &__btn {
        margin 25px 0
    }
    &__link {
        color $white
        font-weight 100
        font-size 16px
    }
    +below('mobile') {
        display block
    }
}
.differentials {
    padding-top: 70px;
    background-color #1c1c1c;

    &__title, &__sub-title {
        color $gray13
        font-size 40px
        text-align center

        +below('mobile') {
            font-size 28px
        }
    }
    &__sub-title {
        margin-top: 40px;
        font-weight 100
        font-size 30px

        +below('mobile') {
            margin-top: 20px;
            font-size 20px
        }
    }
    &__content {
        display flex
        justify-content space-between
        flex-wrap wrap
        margin-top 120px

        +below('small-tablet') {
            margin-top 70px
        }
        +below('mobile') {
            margin-top 50px
        }
    }
    &__box {
        width 30%
        margin-bottom 70px

        +below('small-tablet') {
            width 47%
            margin-bottom: 35px;
        }
        +below('mobile') {
            width: 100%;
            margin-bottom: 20px;
        }
    }
    &__box-title, &__box-text {
        color $gray13
        font-size 26px

        +below('mobile') {
            font-size 20px
        }
    }
    &__box-title {
        height 52px

        +below('mobile') {
            height auto
        }
    }
    &__box-text {
        font-weight 100
        font-size 20px

        +below('mobile') {
            font-size 16px
        }
    }
}
.blog-news {
    +below('mobile') {
        display none
    }
}

.lets-talk {
    position fixed
    top -700px
    display none
    width 100%
    padding 5px 0
    background rgba($white, 0.9)
    text-align center
    transition top 1000ms

    &__btn {
        display inline-block
        width 80%
        height 25px
        line-height 25px
        color $white
        font-size 11px
        text-transform uppercase
        text-align center
        background $blue7
    }
}

.home {
    .lets-talk {
        +below('mobile') {
            display block
        }

        &.active {
            +below('mobile') {
                top 50px
                transition top 1000ms
            }
        }
    }

    .btn-go-top {
        display none
        position fixed
        right 15px
        bottom -70px
        width 35px
        height 35px
        background $yellow
        border-radius 50%
        z-index 1
        transition bottom 500ms

        +below('mobile') {
            display flex
            justify-content center
            align-items center
        }

        &.active {
            +below('mobile') {
                bottom 130px
                transition bottom 500ms
            }
        }

        svg {
            width 20px
        }

    }
}